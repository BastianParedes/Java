package carStore;
import java.util.Scanner;

public class Vehiculo {
    private String patente;
    private String marca;
    private String modelo;
    private int año;
    private char condicion = 'D';

    public Vehiculo(int año) {
    	Scanner scanner = new Scanner(System.in);
    	
    	while (true) {
    		System.out.println ("Por favor introduzca la patente del vehículo en mayúsculas: ");
            patente = scanner.nextLine();

            if (patente.equals(patente.toUpperCase())) {
            	break;
            }
    	}
    	
    	
    	while (true) {
    		System.out.println ("Por favor introduzca la marca del vehículo en mayúsculas: ");
            marca = scanner.nextLine();

            if (marca.equals(marca.toUpperCase())) {
            	break;
            }
    	}
    	
    	
    	
    	
    	
    	
        this.patente = patente;
        this.marca = marca;
        this.modelo = modelo;
        this.año = año;
    }

    public String getPatente() {
        return this.patente;
    }

    public String getMarca() {
        return this.marca;
    }

    public String getModelo() {
        return this.modelo;
    }

    public int getAño() {
        return this.año;
    }

    public char getCondicion() {
        return this.condicion;
    }

    public void setCondicion(char nuevaCondicion) {
    	this.condicion = nuevaCondicion;
    }

}